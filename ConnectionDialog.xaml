<Window
    x:Class="SigmaMS.Dialogs.ConnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Connessione Database"
    Width="500"
    Height="400"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Form fields  -->
        <StackPanel Grid.Row="0">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Configurazione Connessione" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Nome:" />
                <TextBox
                    Name="txtName"
                    Grid.Column="1"
                    Height="25"
                    Padding="0" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Server:" />
                <TextBox
                    Name="txtServer"
                    Grid.Column="1"
                    Height="25"  Padding="0" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Database:" />
                <TextBox
                    Name="txtDatabase"
                    Grid.Column="1"
                    Height="25" Padding="0" />
            </Grid>

            <CheckBox
                Name="chkIntegratedSecurity"
                Margin="0,10,0,0"
                Checked="ChkIntegratedSecurity_Changed"
                Content="Autenticazione Windows"
                IsChecked="False"
                Unchecked="ChkIntegratedSecurity_Changed" />

            <Grid Name="pnlCredentials">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Username:" />
                <TextBox
                    Name="txtUsername"
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="25"
                    Padding="0"
                    Margin="0,5" />

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Password:" />
                <PasswordBox
                    Name="txtPassword"
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="25"
                    Padding="0"
                    Margin="0,5" />
            </Grid>

            <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                <Button
                    Name="btnTest"
                    Width="120"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="BtnTest_Click"
                    Content="Test Connessione" />
                <TextBlock
                    Name="txtTestResult"
                    VerticalAlignment="Center"
                    Foreground="Green" />
            </StackPanel>
        </StackPanel>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Name="btnOK"
                Width="80"
                Height="30"
                Margin="0,0,10,0"
                Click="BtnOK_Click"
                Content="OK" />
            <Button
                Name="btnCancel"
                Width="80"
                Height="30"
                Click="BtnCancel_Click"
                Content="Annulla" />
        </StackPanel>
    </Grid>
</Window>